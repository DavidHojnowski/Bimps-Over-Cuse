import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;

public class Controller implements KeyListener{
	//We implement keylistner becuase the key listner is going to be the main driver of the controller

	View view;
	Model model;
	InputKeyListener input;
	
	public Controller(){
	    input = new InputKeyListener();
		view = new View(input);
		model = new Model();

	}
	@Override
	public void keyPressed(KeyEvent arg0) {
		// TODO Auto-generated method stub
		System.out.println("Key Pressed");
		//When key pressed and key released happen also need to somehow make things happen in the controller
		
		
	}

	@Override
	public void keyReleased(KeyEvent arg0) {
		// TODO Auto-generated method stub
		System.out.println("Key Released");
	}

	@Override
	public void keyTyped(KeyEvent arg0) {
		// TODO Auto-generated method stub
		System.out.println("Key Typed");
		
	}
}
